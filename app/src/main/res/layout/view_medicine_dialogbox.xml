<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gray_i"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:text="Paracetamol"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/size_16"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMNameView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:text="Paracetamol"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMCategoryView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:padding="8dp"
                    android:text="Pain Killer"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Store Box"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMStoreBoxView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:padding="8dp"
                    android:text="100 pcs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Purchase Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMPurchasePriceView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="15 Rs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="Sale Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMSellPriceView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="20 Rs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="Discount Price"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMeDiscountView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="20 Rs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center_vertical"
                    android:text="Recommendation"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMeRecommendationView"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="20 Rs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Quantity"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMQuatityView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="58 pcs"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Generic Name"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMGenericView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="Diamodon, Lemsip"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Company"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMCompanyview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:text="Panadol, Panamax,Tylenol"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Side Effects"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/tvMSideEffectView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:width="0dip"
                    android:background="@drawable/layout_bg_white_p7"
                    android:inputType="number"
                    android:padding="8dp"
                    android:singleLine="false"
                    android:text="low fever with nuasea pain, and loss of appetite."
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:text="Expire Date"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/layout_bg_white_p7"
                    android:drawableRight="@drawable/icf_calender_p"
                    android:padding="8dp"
                    android:text="20/11/2021"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_14"
                    android:textStyle="normal"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/ivMImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="40dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green_light"
                        app:cardCornerRadius="18dp">

                        <Button
                            android:id="@+id/btnClose"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:layout_weight="1"
                            android:background="@android:color/transparent"
                            android:text="Close"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green_light"
                        app:cardCornerRadius="18dp">

                        <Button
                            android:id="@+id/btnEdit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/transparent"
                            android:text="Edit"
                            android:textColor="@color/white"
                            android:textSize="16dp"
                            android:textStyle="bold" />
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>