<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="30dp"
        android:text="Medicine is a science of uncertainty and an art of probability."
        android:textSize="@dimen/size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/green_dark"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/txtLatestSales"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="30dp"
                android:text="Latest Sales"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/txtLatestExpense"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="30dp"
                android:text="Latest Expenses"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/txtLatestMedicine"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="30dp"
                android:text="Latest Medicine"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="8dp"
            app:cardElevation="1dp">

            <TextView
                android:id="@+id/txtSalesGraph"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center"
                android:padding="30dp"
                android:text="Sales Graph"
                android:textColor="@color/white"
                android:textSize="@dimen/size_16" />
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>