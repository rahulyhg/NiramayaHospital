    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTestName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingTop="10dp"
        android:paddingRight="4dp"
        android:paddingBottom="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@+id/imgSearch"
            android:layout_toLeftOf="@+id/imgSearch"
            android:background="@drawable/layout_bg6"
            android:hint="Search Test"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingLeft="16dp"
            android:textSize="@dimen/size_14" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="64dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/layout_bg7"
            android:padding="8dp"
            android:src="@drawable/ic_search" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvTestView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="4dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/gray_white"
        app:cardCornerRadius="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <LinearLayout
