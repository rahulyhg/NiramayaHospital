<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="12dp"
    android:paddingTop="6dp"
    android:paddingRight="12dp"
    android:paddingBottom="6dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvAlphabate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/green_dark"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="4dp"
        android:text="A"
        android:textColor="@color/white"
        android:textSize="@dimen/size_16" />

    <LinearLayout
        android:layout_below="@id/tvAlphabate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/gray_i"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="8">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="6dp"
            android:src="@drawable/man_image" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPatientNameList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="David Backham"
                android:textColor="@color/black"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/tvPatientId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Patient ID"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:src="@drawable/ic_right_expand_p"
            android:tint="@color/gray_d" />
    </LinearLayout>

</RelativeLayout>